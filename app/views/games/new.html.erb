<h1>New Game</h1>

<div class="d-flex">
  <% @letters.each do |letter| %>
    <span class="card letter "><%= letter %></span>
  <% end %>
</div>

<form action="/score" class="form-floating label" method="POST" data-turbo="false">
  What is the longest word you can find?
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="attempt" name="attempt" type="text">
</form>
